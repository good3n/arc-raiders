---
import '../styles/global.css'
import Header from '@components/Header.astro'
import Footer from '@components/Footer.astro'
const { title = 'ARC Raiders Explorer', description = '' } = Astro.props
---

<html lang="en" class="h-full bg-[#130918]">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon-light.svg" media="(prefers-color-scheme: dark)" />
    <link rel="icon" href="/favicon-dark.svg" media="(prefers-color-scheme: light)" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Barlow:wght@400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="min-h-screen antialiased">
    <Header />
    <main class="container py-6 md:py-10">
      <slot />
    </main>
    <Footer />
  </body>
</html>
