
---
import Layout from '@layouts/Layout.astro';
import ArcExplorer from '@components/ArcExplorer.tsx';
import svgLogo from '@assets/images/svg/logo.svg';
---
<Layout title="ARC Raiders Explorer">
  <header class="sticky top-0 z-10 border-b border-slate-200 bg-[#ece2d0]/60 backdrop-blur">
    <div class="mx-auto max-w-6xl px-4 py-4 flex items-center justify-between">
      <div class="flex items-center gap-3">
        <img src={svgLogo.src} alt="Logo" class="w-20 block" />
        <div>
          <h1 class="text-lg md:text-xl font-bold">
            
            ARC Raiders Mini Explorer
        </h1>
        </div>
      </div>
      <a class="inline-flex items-center gap-2 rounded-2xl px-4 py-2 shadow-sm hover:shadow md:text-sm text-xs border border-slate-200"
         href="https://metaforge.app/arc-raiders/api" target="_blank" rel="noreferrer">API Docs â†—</a>
    </div>
  </header>

  <section class="mt-6">
    <ArcExplorer client:load />
  </section>
</Layout>
